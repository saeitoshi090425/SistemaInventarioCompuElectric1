<Window x:Class="SistemaInventarioCompuElectric1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaInventarioCompuElectric1" WindowStartupLocation="CenterScreen"
        
        mc:Ignorable="d"  Icon="/IMAGENES/ICONO.ico"  Width="1000" Height="1000" 
        Title="Sistema de inventario " WindowState="Maximized" Cursor="" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="0.29*" MaxWidth="210"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" Background=" #143c5b">
            <StackPanel VerticalAlignment="Top"  >
                <Image Source="/IMAGENES/logo.jpg"
       Margin="20,30,20,40"
       HorizontalAlignment="Center"
       MaxWidth="300" 
                    MinWidth="90"
       MinHeight="80"   MaxHeight="140"
       Stretch="UniformToFill"/>



                <Button  Cursor="Hand" Height="38" Width="175"  Margin="10,30,10,10"  FontSize="17" Click="BotonInventario_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <iconPacks:PackIconMaterial Kind="Warehouse"
                                       Width="20" Height="20" 
                                       Margin="0,0,8,0"
                                       Foreground="Black"/>
                        <TextBlock Text="Inventario" VerticalAlignment="Center" FontSize="17"/>
                    </StackPanel>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="WhiteSmoke" CornerRadius="3">
                                <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button  Cursor="Hand" Width="175"  Height="38" Margin="10,20,10,10" FontSize="17"  Click="BotonEstadisticas_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Icono a la izquierda (elige el Kind que quieras) -->
                        <iconPacks:PackIconMaterial Kind="ChartBar"
                   Width="20" Height="20" 
                   Margin="0,0,8,0"
                   Foreground="Black"/>
                        <TextBlock Text="Estadisticas" VerticalAlignment="Center" FontSize="17"/>
                    </StackPanel>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="WhiteSmoke" CornerRadius="3">
                                <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button  Cursor="Hand"  Width="175"  Height="38" Margin="10,20,10,10" FontSize="17"  Click="BotonCotizar_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Icono a la izquierda (elige el Kind que quieras) -->
                        <iconPacks:PackIconMaterial Kind="ReceiptText"
        Width="20" Height="20" 
            Margin="0,0,8,0"
                Foreground="Black"/>
                        <TextBlock Text="Cotización" VerticalAlignment="Center" FontSize="17"/>
                    </StackPanel>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="WhiteSmoke" CornerRadius="3">
                                <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Cursor="Hand"  Height="38" Width="175"  Margin="7,20,7,10" FontSize="17"  Click="BotonHistorial_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Icono a la izquierda (elige el Kind que quieras) -->
                        <iconPacks:PackIconMaterial Kind="History"
Width="20" Height="20" 
    Margin="0,0,8,0"
        Foreground="Black"/>
                        <TextBlock Text="Historial " VerticalAlignment="Center" FontSize="17"/>
                    </StackPanel>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="WhiteSmoke" CornerRadius="3">
                                <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="White">
            <ContentControl x:Name="ContenedorPrincipal"/>
        </Grid>

    </Grid>
</Window>
